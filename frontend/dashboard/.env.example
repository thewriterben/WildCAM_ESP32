# ===================================
# WildCAM Dashboard Configuration
# ===================================
# Copy this file to .env and configure with your settings
# DO NOT commit .env to version control!

# ===================================
# API Configuration
# ===================================
# Backend API base URL
REACT_APP_API_URL=http://localhost:5000

# WebSocket URL for real-time updates
REACT_APP_WS_URL=ws://localhost:5000

# API request timeout (milliseconds)
REACT_APP_API_TIMEOUT=30000

# ===================================
# Authentication
# ===================================
# Enable authentication (true/false)
REACT_APP_AUTH_ENABLED=true

# Token refresh interval (milliseconds)
# Refresh token 5 minutes before expiry
REACT_APP_TOKEN_REFRESH_INTERVAL=300000

# Session timeout (milliseconds)
# 1 hour = 3600000
REACT_APP_SESSION_TIMEOUT=3600000

# ===================================
# Feature Flags
# ===================================
# Enable collaboration features
REACT_APP_ENABLE_COLLABORATION=true

# Enable map view
REACT_APP_ENABLE_MAPS=true

# Enable data export
REACT_APP_ENABLE_EXPORT=true

# Enable analytics features
REACT_APP_ENABLE_ANALYTICS=true

# Enable real-time updates
REACT_APP_ENABLE_REAL_TIME=true

# ===================================
# UI Configuration
# ===================================
# Theme mode: 'dark' or 'light'
REACT_APP_THEME_MODE=dark

# Default language: 'en', 'es', 'fr', etc.
REACT_APP_DEFAULT_LANGUAGE=en

# Number of items per page for pagination
REACT_APP_ITEMS_PER_PAGE=20

# Maximum file upload size (bytes)
# 10MB = 10485760
REACT_APP_MAX_UPLOAD_SIZE=10485760

# ===================================
# Performance
# ===================================
# Auto-refresh interval (milliseconds)
# 30 seconds = 30000
REACT_APP_AUTO_REFRESH_INTERVAL=30000

# Debounce delay for search/filter (milliseconds)
REACT_APP_DEBOUNCE_DELAY=300

# Enable client-side caching
REACT_APP_CACHE_ENABLED=true

# Cache time-to-live (milliseconds)
# 5 minutes = 300000
REACT_APP_CACHE_TTL=300000

# ===================================
# Map Configuration
# ===================================
# Map tile server URL
# OpenStreetMap (free)
REACT_APP_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# Map attribution text
REACT_APP_MAP_ATTRIBUTION=Â© OpenStreetMap contributors

# Default map center (latitude)
REACT_APP_DEFAULT_LAT=40.7128

# Default map center (longitude)
REACT_APP_DEFAULT_LNG=-74.0060

# Default zoom level (1-18)
REACT_APP_DEFAULT_ZOOM=10

# Enable map clustering
REACT_APP_MAP_CLUSTERING=true

# Enable heatmap layer
REACT_APP_MAP_HEATMAP=true

# ===================================
# Analytics & Monitoring
# ===================================
# Enable analytics tracking
REACT_APP_ANALYTICS_ENABLED=false

# Google Analytics ID
REACT_APP_ANALYTICS_ID=

# Enable error tracking
REACT_APP_ERROR_TRACKING=false

# Sentry DSN for error tracking
REACT_APP_SENTRY_DSN=

# Environment name for tracking
REACT_APP_ENVIRONMENT=development

# ===================================
# Development
# ===================================
# Enable debug mode
REACT_APP_DEBUG=false

# Use mock data instead of API
REACT_APP_MOCK_DATA=false

# Show performance metrics in console
REACT_APP_SHOW_PERFORMANCE=false

# ===================================
# Advanced Configuration
# ===================================
# Enable PWA features
REACT_APP_PWA_ENABLED=true

# Service worker update interval (milliseconds)
REACT_APP_SW_UPDATE_INTERVAL=3600000

# Enable keyboard shortcuts
REACT_APP_KEYBOARD_SHORTCUTS=true

# Maximum concurrent API requests
REACT_APP_MAX_CONCURRENT_REQUESTS=6

# Image loading strategy: 'eager' or 'lazy'
REACT_APP_IMAGE_LOADING=lazy

# Chart animation duration (milliseconds)
REACT_APP_CHART_ANIMATION_DURATION=300

# ===================================
# Security
# ===================================
# Enable HTTPS-only mode in production
REACT_APP_HTTPS_ONLY=false

# Content Security Policy reporting endpoint
REACT_APP_CSP_REPORT_URI=

# Enable XSS protection
REACT_APP_XSS_PROTECTION=true

# ===================================
# Notification Settings
# ===================================
# Enable browser notifications
REACT_APP_NOTIFICATIONS_ENABLED=true

# Notification duration (milliseconds)
REACT_APP_NOTIFICATION_DURATION=5000

# Enable sound notifications
REACT_APP_SOUND_ENABLED=false

# ===================================
# Collaboration Settings
# ===================================
# Enable real-time collaboration
REACT_APP_COLLAB_REALTIME=true

# Collaboration sync interval (milliseconds)
REACT_APP_COLLAB_SYNC_INTERVAL=5000

# Maximum concurrent collaborators
REACT_APP_MAX_COLLABORATORS=10

# ===================================
# Export Settings
# ===================================
# Supported export formats (comma-separated)
REACT_APP_EXPORT_FORMATS=json,csv,pdf

# Maximum export records
REACT_APP_MAX_EXPORT_RECORDS=10000

# Export file prefix
REACT_APP_EXPORT_PREFIX=wildcam_export

# ===================================
# Camera Settings
# ===================================
# Default motion sensitivity (1-100)
REACT_APP_DEFAULT_MOTION_SENSITIVITY=75

# Default photo quality: 'low', 'medium', 'high'
REACT_APP_DEFAULT_PHOTO_QUALITY=high

# Default detection threshold (0.0-1.0)
REACT_APP_DEFAULT_DETECTION_THRESHOLD=0.7

# Default capture interval (seconds)
REACT_APP_DEFAULT_CAPTURE_INTERVAL=30

# ===================================
# Data Visualization
# ===================================
# Maximum data points in charts
REACT_APP_MAX_CHART_POINTS=100

# Chart color scheme: 'default', 'colorblind', 'monochrome'
REACT_APP_CHART_COLOR_SCHEME=default

# Enable chart animations
REACT_APP_CHART_ANIMATIONS=true

# Default chart type: 'line', 'bar', 'pie'
REACT_APP_DEFAULT_CHART_TYPE=bar

# ===================================
# Accessibility
# ===================================
# Enable accessibility features
REACT_APP_A11Y_ENABLED=true

# High contrast mode
REACT_APP_HIGH_CONTRAST=false

# Screen reader announcements
REACT_APP_SCREEN_READER=true

# Focus indicators
REACT_APP_FOCUS_INDICATORS=true

# ===================================
# Experimental Features
# ===================================
# Enable experimental features (use with caution)
REACT_APP_EXPERIMENTAL=false

# Enable AI-powered annotations
REACT_APP_AI_ANNOTATIONS=false

# Enable predictive analytics
REACT_APP_PREDICTIVE_ANALYTICS=false

# Enable voice commands
REACT_APP_VOICE_COMMANDS=false

# ===================================
# Notes
# ===================================
# - All REACT_APP_* variables are embedded at build time
# - Changes require rebuild (npm run build)
# - Never commit .env with sensitive data
# - Use .env.local for local overrides
# - See CONFIGURATION_GUIDE.md for details
