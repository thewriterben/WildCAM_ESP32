# ===================================
# Research Station Configuration
# ===================================
# Optimized for research facilities with multiple cameras
# and high-volume data collection
# ===================================

# API Configuration
REACT_APP_API_URL=https://research-api.wildcam.example.com
REACT_APP_WS_URL=wss://research-api.wildcam.example.com
REACT_APP_API_TIMEOUT=60000

# Authentication
REACT_APP_AUTH_ENABLED=true
REACT_APP_TOKEN_REFRESH_INTERVAL=300000
REACT_APP_SESSION_TIMEOUT=7200000

# Feature Flags
REACT_APP_ENABLE_COLLABORATION=true
REACT_APP_ENABLE_MAPS=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_REAL_TIME=true

# UI Configuration
REACT_APP_THEME_MODE=light
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_ITEMS_PER_PAGE=50
REACT_APP_MAX_UPLOAD_SIZE=52428800

# Performance - High data volume
REACT_APP_AUTO_REFRESH_INTERVAL=15000
REACT_APP_DEBOUNCE_DELAY=200
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_TTL=180000

# Map Configuration
REACT_APP_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
REACT_APP_MAP_ATTRIBUTION=Â© OpenStreetMap contributors
REACT_APP_DEFAULT_LAT=35.6895
REACT_APP_DEFAULT_LNG=-82.8317
REACT_APP_DEFAULT_ZOOM=12
REACT_APP_MAP_CLUSTERING=true
REACT_APP_MAP_HEATMAP=true

# Analytics & Monitoring
REACT_APP_ANALYTICS_ENABLED=true
REACT_APP_ANALYTICS_ID=G-XXXXXXXXXX
REACT_APP_ERROR_TRACKING=true
REACT_APP_SENTRY_DSN=https://xxx@sentry.io/xxx
REACT_APP_ENVIRONMENT=production

# Development
REACT_APP_DEBUG=false
REACT_APP_MOCK_DATA=false
REACT_APP_SHOW_PERFORMANCE=false

# Advanced Configuration
REACT_APP_PWA_ENABLED=true
REACT_APP_SW_UPDATE_INTERVAL=1800000
REACT_APP_KEYBOARD_SHORTCUTS=true
REACT_APP_MAX_CONCURRENT_REQUESTS=10
REACT_APP_IMAGE_LOADING=lazy
REACT_APP_CHART_ANIMATION_DURATION=200

# Security
REACT_APP_HTTPS_ONLY=true
REACT_APP_XSS_PROTECTION=true

# Notifications
REACT_APP_NOTIFICATIONS_ENABLED=true
REACT_APP_NOTIFICATION_DURATION=8000
REACT_APP_SOUND_ENABLED=true

# Collaboration
REACT_APP_COLLAB_REALTIME=true
REACT_APP_COLLAB_SYNC_INTERVAL=3000
REACT_APP_MAX_COLLABORATORS=25

# Export
REACT_APP_EXPORT_FORMATS=json,csv,pdf
REACT_APP_MAX_EXPORT_RECORDS=50000
REACT_APP_EXPORT_PREFIX=research_station

# Camera Settings
REACT_APP_DEFAULT_MOTION_SENSITIVITY=85
REACT_APP_DEFAULT_PHOTO_QUALITY=high
REACT_APP_DEFAULT_DETECTION_THRESHOLD=0.75
REACT_APP_DEFAULT_CAPTURE_INTERVAL=15

# Data Visualization
REACT_APP_MAX_CHART_POINTS=200
REACT_APP_CHART_COLOR_SCHEME=default
REACT_APP_CHART_ANIMATIONS=true
REACT_APP_DEFAULT_CHART_TYPE=line

# Accessibility
REACT_APP_A11Y_ENABLED=true
REACT_APP_HIGH_CONTRAST=false
REACT_APP_SCREEN_READER=true
REACT_APP_FOCUS_INDICATORS=true

# Experimental
REACT_APP_EXPERIMENTAL=true
REACT_APP_AI_ANNOTATIONS=true
REACT_APP_PREDICTIVE_ANALYTICS=true
REACT_APP_VOICE_COMMANDS=false
