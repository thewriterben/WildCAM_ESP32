# ===================================
# Conservation Organization Configuration
# ===================================
# Optimized for conservation organizations
# with focus on collaboration and reporting
# ===================================

# API Configuration
REACT_APP_API_URL=https://conservation-api.wildcam.example.com
REACT_APP_WS_URL=wss://conservation-api.wildcam.example.com
REACT_APP_API_TIMEOUT=45000

# Authentication
REACT_APP_AUTH_ENABLED=true
REACT_APP_TOKEN_REFRESH_INTERVAL=300000
REACT_APP_SESSION_TIMEOUT=10800000

# Feature Flags - Full collaboration suite
REACT_APP_ENABLE_COLLABORATION=true
REACT_APP_ENABLE_MAPS=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_REAL_TIME=true

# UI Configuration
REACT_APP_THEME_MODE=light
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_ITEMS_PER_PAGE=25
REACT_APP_MAX_UPLOAD_SIZE=20971520

# Performance - Balanced
REACT_APP_AUTO_REFRESH_INTERVAL=30000
REACT_APP_DEBOUNCE_DELAY=300
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_TTL=300000

# Map Configuration - Enhanced visualization
REACT_APP_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
REACT_APP_MAP_ATTRIBUTION=Â© OpenStreetMap contributors
REACT_APP_DEFAULT_LAT=39.8283
REACT_APP_DEFAULT_LNG=-98.5795
REACT_APP_DEFAULT_ZOOM=4
REACT_APP_MAP_CLUSTERING=true
REACT_APP_MAP_HEATMAP=true

# Analytics & Monitoring
REACT_APP_ANALYTICS_ENABLED=true
REACT_APP_ANALYTICS_ID=G-CONSERVATION
REACT_APP_ERROR_TRACKING=true
REACT_APP_SENTRY_DSN=https://xxx@sentry.io/conservation
REACT_APP_ENVIRONMENT=production

# Development
REACT_APP_DEBUG=false
REACT_APP_MOCK_DATA=false
REACT_APP_SHOW_PERFORMANCE=false

# Advanced Configuration
REACT_APP_PWA_ENABLED=true
REACT_APP_SW_UPDATE_INTERVAL=3600000
REACT_APP_KEYBOARD_SHORTCUTS=true
REACT_APP_MAX_CONCURRENT_REQUESTS=8
REACT_APP_IMAGE_LOADING=lazy
REACT_APP_CHART_ANIMATION_DURATION=300

# Security - Enhanced
REACT_APP_HTTPS_ONLY=true
REACT_APP_XSS_PROTECTION=true

# Notifications - Comprehensive
REACT_APP_NOTIFICATIONS_ENABLED=true
REACT_APP_NOTIFICATION_DURATION=6000
REACT_APP_SOUND_ENABLED=true

# Collaboration - Team-focused
REACT_APP_COLLAB_REALTIME=true
REACT_APP_COLLAB_SYNC_INTERVAL=5000
REACT_APP_MAX_COLLABORATORS=50

# Export - Comprehensive reporting
REACT_APP_EXPORT_FORMATS=json,csv,pdf
REACT_APP_MAX_EXPORT_RECORDS=25000
REACT_APP_EXPORT_PREFIX=conservation_report

# Camera Settings - Quality focused
REACT_APP_DEFAULT_MOTION_SENSITIVITY=80
REACT_APP_DEFAULT_PHOTO_QUALITY=high
REACT_APP_DEFAULT_DETECTION_THRESHOLD=0.70
REACT_APP_DEFAULT_CAPTURE_INTERVAL=30

# Data Visualization - Rich charts
REACT_APP_MAX_CHART_POINTS=150
REACT_APP_CHART_COLOR_SCHEME=colorblind
REACT_APP_CHART_ANIMATIONS=true
REACT_APP_DEFAULT_CHART_TYPE=bar

# Accessibility - Full compliance
REACT_APP_A11Y_ENABLED=true
REACT_APP_HIGH_CONTRAST=false
REACT_APP_SCREEN_READER=true
REACT_APP_FOCUS_INDICATORS=true

# Experimental - Selective features
REACT_APP_EXPERIMENTAL=true
REACT_APP_AI_ANNOTATIONS=true
REACT_APP_PREDICTIVE_ANALYTICS=true
REACT_APP_VOICE_COMMANDS=false
