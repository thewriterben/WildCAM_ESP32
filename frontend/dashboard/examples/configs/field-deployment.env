# ===================================
# Field Deployment Configuration
# ===================================
# Optimized for remote field deployments
# with limited bandwidth and offline capability
# ===================================

# API Configuration
REACT_APP_API_URL=https://field-api.wildcam.example.com
REACT_APP_WS_URL=wss://field-api.wildcam.example.com
REACT_APP_API_TIMEOUT=90000

# Authentication
REACT_APP_AUTH_ENABLED=true
REACT_APP_TOKEN_REFRESH_INTERVAL=600000
REACT_APP_SESSION_TIMEOUT=14400000

# Feature Flags
REACT_APP_ENABLE_COLLABORATION=false
REACT_APP_ENABLE_MAPS=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_REAL_TIME=false

# UI Configuration
REACT_APP_THEME_MODE=dark
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_ITEMS_PER_PAGE=15
REACT_APP_MAX_UPLOAD_SIZE=5242880

# Performance - Low bandwidth optimization
REACT_APP_AUTO_REFRESH_INTERVAL=60000
REACT_APP_DEBOUNCE_DELAY=500
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_TTL=900000

# Map Configuration - Offline tiles
REACT_APP_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
REACT_APP_MAP_ATTRIBUTION=Â© OpenStreetMap contributors
REACT_APP_DEFAULT_LAT=45.5231
REACT_APP_DEFAULT_LNG=-122.6765
REACT_APP_DEFAULT_ZOOM=10
REACT_APP_MAP_CLUSTERING=true
REACT_APP_MAP_HEATMAP=false

# Analytics & Monitoring - Minimal
REACT_APP_ANALYTICS_ENABLED=false
REACT_APP_ERROR_TRACKING=false
REACT_APP_ENVIRONMENT=field

# Development
REACT_APP_DEBUG=false
REACT_APP_MOCK_DATA=false
REACT_APP_SHOW_PERFORMANCE=false

# Advanced Configuration - Offline-first
REACT_APP_PWA_ENABLED=true
REACT_APP_SW_UPDATE_INTERVAL=7200000
REACT_APP_KEYBOARD_SHORTCUTS=true
REACT_APP_MAX_CONCURRENT_REQUESTS=3
REACT_APP_IMAGE_LOADING=lazy
REACT_APP_CHART_ANIMATION_DURATION=150

# Security
REACT_APP_HTTPS_ONLY=true
REACT_APP_XSS_PROTECTION=true

# Notifications - Battery efficient
REACT_APP_NOTIFICATIONS_ENABLED=true
REACT_APP_NOTIFICATION_DURATION=4000
REACT_APP_SOUND_ENABLED=false

# Collaboration - Disabled for field use
REACT_APP_COLLAB_REALTIME=false
REACT_APP_COLLAB_SYNC_INTERVAL=30000
REACT_APP_MAX_COLLABORATORS=5

# Export - Limited
REACT_APP_EXPORT_FORMATS=json,csv
REACT_APP_MAX_EXPORT_RECORDS=5000
REACT_APP_EXPORT_PREFIX=field_data

# Camera Settings - Battery efficient
REACT_APP_DEFAULT_MOTION_SENSITIVITY=70
REACT_APP_DEFAULT_PHOTO_QUALITY=medium
REACT_APP_DEFAULT_DETECTION_THRESHOLD=0.65
REACT_APP_DEFAULT_CAPTURE_INTERVAL=60

# Data Visualization - Simplified
REACT_APP_MAX_CHART_POINTS=50
REACT_APP_CHART_COLOR_SCHEME=default
REACT_APP_CHART_ANIMATIONS=false
REACT_APP_DEFAULT_CHART_TYPE=bar

# Accessibility
REACT_APP_A11Y_ENABLED=true
REACT_APP_HIGH_CONTRAST=true
REACT_APP_SCREEN_READER=true
REACT_APP_FOCUS_INDICATORS=true

# Experimental - Disabled
REACT_APP_EXPERIMENTAL=false
REACT_APP_AI_ANNOTATIONS=false
REACT_APP_PREDICTIVE_ANALYTICS=false
REACT_APP_VOICE_COMMANDS=false
