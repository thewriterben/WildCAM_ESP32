# Edge Computing Environment Variables
# Copy to .env and fill in your values

# Cloud API Configuration
CLOUD_API_URL=https://api.wildcam.example.com
CLOUD_API_KEY=your_api_key_here

# MQTT Configuration (Raspberry Pi)
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=wildcam
MQTT_PASSWORD=your_secure_password

# Postgres Configuration (Optional - for TimescaleDB)
POSTGRES_PASSWORD=wildcam_secure_password

# Grafana Configuration (Optional)
GRAFANA_PASSWORD=admin_password

# AWS Configuration (Optional - for cloud MQTT)
AWS_IOT_ENDPOINT=xxxxx.iot.us-east-1.amazonaws.com
AWS_REGION=us-east-1

# Azure Configuration (Optional)
AZURE_IOT_HUB=your-hub.azure-devices.net
