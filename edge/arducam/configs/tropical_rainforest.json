{
  "deployment_name": "Tropical Rainforest Wildlife Monitoring",
  "description": "IMX500 edge node deployment for tropical rainforest species detection with LoRa mesh networking",
  
  "device_config": {
    "device_id": "imx500_rainforest_001",
    "location": "Amazon Basin, Brazil",
    "coordinates": [-3.4653, -62.2159],
    "deployment_date": "2025-12-25",
    "deployment_name": "Tropical Rainforest Monitoring"
  },
  
  "camera_settings": {
    "resolution": [640, 640],
    "frame_rate": 30,
    "detection_threshold": 0.6
  },
  
  "communication": {
    "protocol": "lora",
    "fallback_protocols": ["wifi", "mqtt"],
    
    "mqtt": {
      "broker": "gateway.wildcam.local",
      "port": 1883,
      "topic_prefix": "wildcam/imx500",
      "username": null,
      "password": null,
      "use_tls": false
    },
    
    "lora": {
      "frequency": 915.0,
      "spreading_factor": 7,
      "bandwidth": 125.0,
      "tx_power": 14,
      "sync_word": 18
    },
    
    "rest_api": {
      "endpoint": "http://192.168.1.100:5000/api/detections",
      "token": null
    }
  },
  
  "detection": {
    "mode": "continuous",
    "metadata_only": true,
    "capture_high_res_on_detect": true,
    "target_species": [
      "jaguar",
      "tapir",
      "macaw",
      "howler_monkey",
      "giant_anteater",
      "ocelot"
    ],
    "min_detection_interval_sec": 5
  },
  
  "model": {
    "path": "/home/pi/models/tropical_wildlife_v2.rpk",
    "update_interval_hours": 24
  },
  
  "storage": {
    "store_and_forward": true,
    "max_storage_mb": 2048,
    "storage_path": "/home/pi/wildcam/storage",
    "sync_interval_minutes": 60
  },
  
  "power_management": {
    "power_save_enabled": true,
    "sleep_duration_sec": 120,
    "low_battery_threshold": 3.3
  },
  
  "advanced": {
    "enable_pose_estimation": false,
    "enable_tracking": true,
    "max_tracks": 10,
    "track_timeout_sec": 30
  },
  
  "cloud_integration": {
    "enabled": false,
    "provider": null,
    "bucket": null
  }
}
