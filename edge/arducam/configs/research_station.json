{
  "deployment_name": "Research Station - High Bandwidth",
  "description": "IMX500 deployment for research station with WiFi connectivity and full-resolution image capture",
  
  "device_config": {
    "device_id": "imx500_research_001",
    "location": "Wildlife Research Station",
    "coordinates": [40.7128, -74.0060],
    "deployment_date": "2025-12-25",
    "deployment_name": "Research Station - High Bandwidth"
  },
  
  "camera_settings": {
    "resolution": [640, 640],
    "frame_rate": 30,
    "detection_threshold": 0.5
  },
  
  "communication": {
    "protocol": "wifi",
    "fallback_protocols": ["mqtt"],
    
    "mqtt": {
      "broker": "mqtt.research.local",
      "port": 1883,
      "topic_prefix": "wildcam/research",
      "username": "wildcam_user",
      "password": null,
      "use_tls": true
    },
    
    "lora": {
      "frequency": 915.0,
      "spreading_factor": 7,
      "bandwidth": 125.0,
      "tx_power": 14,
      "sync_word": 18
    },
    
    "rest_api": {
      "endpoint": "https://api.research.local/detections",
      "token": "YOUR_API_TOKEN_HERE"
    }
  },
  
  "detection": {
    "mode": "continuous",
    "metadata_only": false,
    "capture_high_res_on_detect": true,
    "target_species": [],
    "min_detection_interval_sec": 1
  },
  
  "model": {
    "path": "/home/pi/models/general_wildlife_v3.rpk",
    "update_interval_hours": 12
  },
  
  "storage": {
    "store_and_forward": false,
    "max_storage_mb": 512,
    "storage_path": "/home/pi/wildcam/storage",
    "sync_interval_minutes": 15
  },
  
  "power_management": {
    "power_save_enabled": false,
    "sleep_duration_sec": 0,
    "low_battery_threshold": 3.3
  },
  
  "advanced": {
    "enable_pose_estimation": true,
    "enable_tracking": true,
    "max_tracks": 20,
    "track_timeout_sec": 10
  },
  
  "cloud_integration": {
    "enabled": true,
    "provider": "aws",
    "bucket": "wildcam-research-data"
  }
}
