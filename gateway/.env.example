# WildCAM Gateway Configuration
# Copy this file to .env and customize for your deployment

# ========================================
# Gateway Identification
# ========================================
GATEWAY_ID=gateway_001
GATEWAY_NAME=WildCAM Gateway
GATEWAY_LOCATION=Wildlife Reserve - North Sector

# ========================================
# LoRa Radio Configuration
# ========================================
# Frequency in MHz: 915 (US), 868 (EU), 433 (Asia)
LORA_FREQUENCY=915.0

# Bandwidth in Hz: 125000, 250000, 500000
LORA_BANDWIDTH=125000

# Spreading Factor: 7-12 (higher = longer range, slower)
LORA_SPREADING_FACTOR=7

# Coding Rate: 5-8 (4/5 to 4/8)
LORA_CODING_RATE=5

# TX Power in dBm: 2-20
LORA_TX_POWER=17

# GPIO Pins (BCM numbering for Raspberry Pi)
LORA_CS_PIN=8       # SPI Chip Select (CE0)
LORA_RESET_PIN=25   # Reset pin
LORA_DIO0_PIN=24    # DIO0 interrupt pin

# ========================================
# MQTT Broker Configuration
# ========================================
MQTT_ENABLED=true
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=wildcam_gateway
MQTT_TOPIC_PREFIX=wildcam

# TLS/SSL (for secure connections)
MQTT_USE_TLS=false
MQTT_CA_CERT=
MQTT_CLIENT_CERT=
MQTT_CLIENT_KEY=

# ========================================
# AWS IoT Core (example)
# ========================================
# MQTT_ENABLED=true
# MQTT_BROKER_HOST=your-endpoint.iot.us-east-1.amazonaws.com
# MQTT_BROKER_PORT=8883
# MQTT_USE_TLS=true
# MQTT_CA_CERT=/path/to/AmazonRootCA1.pem
# MQTT_CLIENT_CERT=/path/to/certificate.pem.crt
# MQTT_CLIENT_KEY=/path/to/private.pem.key

# ========================================
# Azure IoT Hub (example)
# ========================================
# MQTT_ENABLED=true
# MQTT_BROKER_HOST=your-hub.azure-devices.net
# MQTT_BROKER_PORT=8883
# MQTT_USERNAME=your-hub.azure-devices.net/device-id/?api-version=2021-04-12
# MQTT_USE_TLS=true

# ========================================
# REST API Configuration
# ========================================
API_ENABLED=true
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=false

# Optional API key for authentication
API_KEY=

# ========================================
# Database Configuration
# ========================================
DB_PATH=gateway_data.db
DB_MAX_RECORDS=100000
DB_RETENTION_DAYS=30
DB_BACKUP_ENABLED=true

# ========================================
# Cloud Synchronization
# ========================================
CLOUD_SYNC_ENABLED=true
CLOUD_SYNC_INTERVAL=300

# WildCAM Cloud API
CLOUD_API_URL=https://api.wildcam.example.com/v1
CLOUD_API_KEY=your-api-key-here

# ========================================
# Operational Settings
# ========================================
# Maximum nodes to track
MAX_NODES=100

# Beacon interval (seconds)
BEACON_INTERVAL=60

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# Node timeout (seconds) - mark offline if no contact
NODE_TIMEOUT=300

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO
LOG_FILE=gateway.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
