# ESP32 WildCAM Production Environment Configuration

# =============================================================================
# SECURITY SETTINGS (REQUIRED - CHANGE ALL DEFAULTS)
# =============================================================================

# JWT and application secrets (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here-change-me
SECRET_KEY=your-super-secure-app-secret-key-here-change-me

# Database credentials
POSTGRES_USER=wildlife_user
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_DB=wildlife_db

# Redis authentication
REDIS_PASSWORD=your-secure-redis-password-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
FLASK_ENV=production
NODE_ENV=production

# Application URLs (update with your actual domain)
REACT_APP_API_URL=https://api.wildcam.yourdomain.com
REACT_APP_WEBSOCKET_URL=wss://api.wildcam.yourdomain.com

# Gunicorn configuration
GUNICORN_WORKERS=4
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password-here

# InfluxDB configuration (optional)
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=your-secure-influxdb-password-here
INFLUXDB_TOKEN=your-influxdb-token-here

# =============================================================================
# CLOUD STORAGE (OPTIONAL)
# =============================================================================

# AWS S3 configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET=your-wildlife-bucket-name
AWS_REGION=us-west-2

# =============================================================================
# NOTIFICATION SETTINGS (OPTIONAL)
# =============================================================================

# Webhook URL for deployment notifications (Slack, Discord, etc.)
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email settings for alerts
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=alerts@yourdomain.com
SMTP_PASSWORD=your-smtp-password
ALERT_EMAIL=admin@yourdomain.com

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL certificate paths (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Let's Encrypt email for automatic certificate generation
LETSENCRYPT_EMAIL=admin@yourdomain.com

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Timezone
TZ=UTC

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE=50

# Session timeout (in minutes)
SESSION_TIMEOUT=30

# API rate limiting
API_RATE_LIMIT=100/hour
AUTH_RATE_LIMIT=10/hour

# =============================================================================
# DEVELOPMENT SETTINGS (DO NOT USE IN PRODUCTION)
# =============================================================================

# Only enable in development environments
# DEBUG=false
# TESTING=false