/**
 * @file secrets.h.example
 * @brief Template for WiFi credentials and cloud configuration
 * 
 * INSTRUCTIONS:
 * 1. Copy this file to "secrets.h" in the same directory
 * 2. Replace the placeholder values with your actual credentials
 * 3. DO NOT commit secrets.h to version control
 * 
 * The secrets.h file is included by config.h and should contain:
 * - WIFI_SSID: Your WiFi network name
 * - WIFI_PASSWORD: Your WiFi network password
 * - CLOUD_API_KEY: API key for cloud backend (if required)
 */

#ifndef SECRETS_H
#define SECRETS_H

//==============================================================================
// WIFI CREDENTIALS
//==============================================================================

/**
 * @brief WiFi SSID (network name)
 * @note Replace with your actual WiFi network name
 * @example "MyHomeNetwork"
 */
#define WIFI_SSID "YourSSID"

/**
 * @brief WiFi password
 * @note Replace with your actual WiFi network password
 * @example "MySecurePassword123"
 */
#define WIFI_PASSWORD "YourPassword"

//==============================================================================
// CLOUD INTEGRATION CREDENTIALS
//==============================================================================

/**
 * @brief Cloud backend server URL
 * @note Replace with your backend server URL
 * @example "http://192.168.1.100:5000" for local development
 * @example "https://api.wildcam.io" for production
 */
#define CLOUD_SERVER_URL "http://192.168.1.100:5000"

/**
 * @brief API key for cloud backend authentication
 * @note Leave empty if your backend doesn't require authentication
 * @note Generate a secure API key from your backend admin panel
 * @example "wildcam_api_key_abc123xyz789"
 */
#define CLOUD_API_KEY ""

#endif // SECRETS_H
