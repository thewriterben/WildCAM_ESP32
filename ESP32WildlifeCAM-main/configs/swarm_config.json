      "mobile_app": {
        "enabled": true,
        "push_notifications": true,
        "video_streaming": true
      },
      "emergency_override": {
        "enabled": true,
        "authorized_roles": ["administrator", "emergency_responder"],
        "override_timeout_s": 300
      },
      "alerts": {
        "info": {"enabled": true, "sound": true},
        "warning": {"enabled": true, "sound": true},
        "error": {"enabled": true, "sound": true},
        "critical": {"enabled": true, "sound": true, "sms": true},
        "emergency": {"enabled": true, "sound": true, "sms": true, "call": true}
      }
    },
    
    "swarm_members": {
      "types": {
        "aerial_drone": {
          "count": 30,
          "max_velocity": 15.0,
          "max_altitude": 120.0,
          "flight_time_minutes": 30,
          "sensors": ["rgb_camera", "thermal_camera", "lidar", "microphone", "gps"]
        },
        "ground_robot": {
          "count": 10,
          "max_velocity": 2.0,
          "battery_capacity": 5000,
