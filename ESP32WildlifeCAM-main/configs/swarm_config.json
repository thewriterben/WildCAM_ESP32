        "separation_distance": 20.0,
        "cohesion_radius": 60.0,
        "alignment_radius": 40.0,
        "max_velocity": 8.0,
        "max_acceleration": 3.0,
        "min_battery_threshold": 25.0
      },
      "features": {
        "collision_avoidance": true,
        "fault_tolerance": true,
        "adaptive_formation": true,
        "self_healing": true
      }
    },
    
    "bio_inspired_algorithms": {
      "pso": {
        "enabled": true,
        "population_size": 20,
        "max_iterations": 100,
        "inertia_weight": 0.7,
        "cognitive_weight": 1.5,
        "social_weight": 1.5,
        "velocity_limits": [-10.0, 10.0]
      },
      "aco": {
        "enabled": true,
        "ant_count": 20,
        "max_iterations": 100,
        "pheromone_evaporation": 0.1,
        "pheromone_deposit": 1.0,
        "alpha": 1.0,
        "beta": 2.0
      },
      "bee_algorithm": {
        "enabled": true,
        "scout_bees": 10,
        "selected_sites": 3,
        "elite_sites": 1,
        "recruited_bees": 20,
        "max_iterations": 100,
        "search_radius": 50.0
      },
      "genetic_algorithm": {
        "enabled": true,
        "population_size": 30,
        "generations": 50,
        "mutation_rate": 0.1,
        "crossover_rate": 0.7
      }
    },
    
    "navigation": {
      "mode": "NAV_HYBRID",
      "gps": {
        "enabled": true,
        "rtk_enabled": true,
        "target_accuracy": "GPS_RTK_FIXED",
        "update_rate_hz": 10
      },
      "visual_inertial": {
        "enabled": true,
        "calibration_required": true,
        "confidence_threshold": 0.8
      },
      "slam": {
        "enabled": true,
        "map_resolution": 0.5,
        "landmark_threshold": 0.85
      },
      "geofencing": {
        "enabled": true,
        "zones": [
          {
            "id": 1,
            "name": "Primary Conservation Area",
            "type": "must_stay_within",
            "boundaries": [
              {"lat": -10.5, "lon": 35.2},
              {"lat": -10.5, "lon": 35.3},
              {"lat": -10.4, "lon": 35.3},
              {"lat": -10.4, "lon": 35.2}
            ],
            "altitude_limits": [0, 120]
          },
          {
            "id": 2,
            "name": "No-Fly Zone (Airport)",
            "type": "exclusion",
            "boundaries": [
              {"lat": -10.45, "lon": 35.25},
              {"lat": -10.45, "lon": 35.26},
              {"lat": -10.44, "lon": 35.26},
              {"lat": -10.44, "lon": 35.25}
            ],
            "altitude_limits": [0, 500]
          }
        ]
      },
      "collision_avoidance": {
        "enabled": true,
        "detection_range": 50.0,
        "avoidance_distance": 15.0,
        "prediction_time": 5.0
      }
    },
    
    "sensors": {
      "multi_modal_fusion": true,
      "available_sensors": {
        "imaging": {
          "rgb_camera": {
            "enabled": true,
            "resolution": "1920x1080",
            "frame_rate": 30
          },
          "thermal_camera": {
            "enabled": true,
            "resolution": "640x480",
            "temperature_range": [-20, 150],
            "sensitivity": 0.05
          },
          "multispectral": {
            "enabled": true,
            "bands": ["NIR", "Red", "Green", "Blue"],
            "resolution": "1280x960"
          }
        },
        "ranging": {
          "lidar": {
            "enabled": true,
            "range": 100.0,
            "resolution": 0.01,
            "scan_rate": 10
          },
          "ultrasonic": {
            "enabled": true,
            "range": 10.0,
            "beam_angle": 30
          }
        },
        "acoustic": {
          "microphone": {
            "enabled": true,
            "frequency_range": [20, 20000],
            "sample_rate": 44100,
            "sensitivity": -38
          }
        },
        "environmental": {
          "temperature": {"enabled": true, "accuracy": 0.5},
          "humidity": {"enabled": true, "accuracy": 3.0},
          "pressure": {"enabled": true, "accuracy": 1.0},
          "air_quality": {"enabled": true, "pollutants": ["CO2", "VOC", "PM2.5"]}
        }
      },
      "detection_thresholds": {
        "wildlife_confidence": 0.75,
        "human_confidence": 0.85,
        "vehicle_confidence": 0.90,
        "thermal_threshold": 25.0
      }
    },
    
    "distributed_computing": {
      "topology": "TOPOLOGY_MESH",
      "edge_computing": {
        "enabled": true,
        "cpu_allocation_percent": 60,
        "memory_allocation_mb": 100
      },
      "consensus": {
        "algorithm": "CONSENSUS_PBFT",
        "timeout_ms": 5000,
        "min_participants": 3
      },
      "networking": {
        "protocols": {
          "uwb": {
            "enabled": true,
            "frequency": 6489.6,
            "bandwidth": 499.2,
            "tx_power": -10
          },
          "lora": {
            "enabled": true,
            "frequency": 915.0,
            "spreading_factor": 12,
            "bandwidth": 125,
            "coding_rate": 5
          },
          "wifi": {
            "enabled": true,
            "mode": "mesh",
            "channel": 6
          }
        },
        "routing": {
          "algorithm": "AODV",
          "max_hops": 5,
          "route_timeout_s": 60
        }
      },
      "blockchain": {
        "enabled": true,
        "difficulty": 4,
        "block_time_s": 30,
        "max_transactions_per_block": 100
      },
      "federated_learning": {
        "enabled": true,
        "round_duration_s": 300,
        "min_participants": 5,
        "aggregation_method": "FedAvg"
      }
    },
    
    "interface": {
      "modes": ["monitoring", "control", "planning", "analysis"],
      "default_mode": "monitoring",
      "voice_control": {
        "enabled": true,
        "language": "en-US",
        "confidence_threshold": 0.7
      },
      "augmented_reality": {
        "enabled": true,
        "marker_update_rate": 10
