        {
          "src": "/assets/capture-icon.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Burst Mode",
      "short_name": "Burst",
      "description": "Capture multiple photos in burst mode",
      "url": "/?action=capture&mode=burst",
